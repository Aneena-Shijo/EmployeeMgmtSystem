@model EmployeeMgmtSystem.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Delete Employee</h1>

<h3>Are you sure you want to delete this employee?</h3>

<div>
    <label>Employee ID:</label>
    <span>@Model.EmployeeID</span>
</div>
<div>
    <label>First Name:</label>
    <span>@Model.FirstName</span>
</div>
<div>
    <label>Last Name:</label>
    <span>@Model.LastName</span>
</div>
<div>
    <label>Position:</label>
    <span>@Model.Position</span>
</div>
<div>
    <label>Department:</label>
    <span>@Model.Department</span>
</div>
<div>
    <label>Date of Hire:</label>
    <span>@Model.DateOfHire.ToString("yyyy-MM-dd")</span>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="EmployeeID" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a href="@Url.Action("Index", "Employee")">Back to Employee List</a>
