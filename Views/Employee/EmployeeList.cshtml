<!-- Views/Employee/Index.cshtml -->
@model IEnumerable<Employee>

<h1>Employee List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Position</th>
            <th>Department</th>
            <th>Date of Hire</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeID</td>
                <td>@employee.FirstName @employee.LastName</td>
                <td>@employee.Position</td>
                <td>@employee.Department</td>
                <td>@employee.DateOfHire.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Details", "Employee", new { id = employee.EmployeeID })">Details</a> |
                    <a href="@Url.Action("Edit", "Employee", new { id = employee.EmployeeID })">Edit</a> |
                    <a href="@Url.Action("Delete", "Employee", new { id = employee.EmployeeID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Employee")">Add New Employee</a>

